---
import "@fontsource-variable/inter";
import "@fontsource/poppins";
import Container from "../components/Container.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import { Icon } from "astro-icon/components";
---

<html lang="gl">
  <head>
    <script is:inline>
      if (localStorage.getItem("theme") === null) {
        document.documentElement.setAttribute("data-theme", "black");
      } else
        document.documentElement.setAttribute(
          "data-theme",
          localStorage.getItem("theme")
        );
    </script>
    <script>
      import { themeChange } from "theme-change";
      themeChange();
    </script>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href="/trollface.png" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <title>DucksaberVN</title>
  </head>
  <body class="flex flex-col min-h-screen items-center justify-center p-4">
    <!-- Theme Toggle - positioned outside the main panel -->

    <!-- Main Content Panel with Blur Effect -->
    <div class="content-panel">
      <Header />
      
      <div class="divider mx-auto h-fit max-w-3xl w-full flex flex-nowrap bg-secondary">
      </div>
      
      <main class="flex-grow max-h-[60vh] overflow-y-auto py-2">
        <div class="container">
          <Container />
        </div>
      </main>
      
      <Footer class="flex justify-center items-center py-4" />
    </div>
  </body>
</html>

<style is:global>
  body {
    font-family: "Inter", sans-serif;
    font-weight: 400;
    position: relative;
  }

  /* Create sharp background */
  body::before {
    content: '';
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: url('/banner.png');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    background-attachment: fixed;
    z-index: -2;
    filter: blur(8px);
  }



  /* Main Content Panel Styling */
  .content-panel {
    position: relative;
    width: 90vw;
    max-width: 900px;
    max-height: 85vh;
    background: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 20px;
    padding: 2rem;
    box-shadow: 0 25px 45px rgba(0, 0, 0, 0.1);
    display: flex;
    flex-direction: column;
    overflow: hidden;
  }

  /* Dark theme panel styling */
  [data-theme="black"] .content-panel {
    background: rgba(0, 0, 0, 0.3);
    border: 1px solid rgba(255, 255, 255, 0.1);
    box-shadow: 0 25px 45px rgba(0, 0, 0, 0.3);
  }

  /* Dark theme overlay */
[data-theme="black"] body::after {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.4);
  z-index: -1;
  pointer-events: none;
}

  /* Responsive panel adjustments */
  @media (max-width: 768px) {
    .content-panel {
      width: 95vw;
      padding: 1.5rem;
      max-height: 90vh;
    }
  }

  @media (max-width: 480px) {
    .content-panel {
      padding: 1rem;
      border-radius: 15px;
    }
  }

  @media (min-width: 768px) {
    .container {
      display: flex;
      flex-wrap: wrap;
    }
  }

  @media only screen and (max-width: 480px) {
    * {
      font-size: 12px;
    }
  }

  /* Hide scrollbar but keep scroll functionality */
  .content-panel main::-webkit-scrollbar {
    display: none;
  }

  .content-panel main {
    -ms-overflow-style: none;  /* Internet Explorer 10+ */
    scrollbar-width: none;     /* Firefox */
  }

  /* Container adjustments for the new layout */
  .container {
    width: 100%;
  }

  @media (min-width: 768px) {
    .container {
      display: flex;
      flex-wrap: wrap;
    }
  }

  @media (max-width: 768px) {
    .container {
      flex-direction: column;
    }
  }
</style>