---
import "@fontsource/poppins";
import { Icon } from "astro-icon/components";
import * as about from "../pages/about/about.md";
---

<header class="mx-auto  relative">
  <article
    class="flex flex-col md:flex-col items-center gap-4 w-full max-w-2xl"
  >
    <div
      class="flex-shrink-0 w-48 md:w-48 rounded-full shadow-sm overflow-hidden shadow-2xl drop-shadow-2xl"
    >
      <img
        alt="avatar"
        src="/profile_picture.png"
        class=""
      />
    </div>

    <div class="text-center">
      <div class="flex flex-col items-center justify-center mb-2">
  <h1 class="text-3xl font-extrabold tracking-tight md:text-3xl name-font">
    {about.frontmatter.name}
  </h1>
  <div class="badge w-max text-sm font-light badge-outline shadow-lg mt-2">
    {about.frontmatter.pronouns}
  </div>
</div>
      <h2 class="text-lg mb-2 text-secondary">
        {about.frontmatter.designation}
      </h2>
      <div class="flex items-center justify-center mt-1">
        <Icon name="carbon:location" class="w-4 h-4 mr-1" />
        <p class="text-sm text-secondary">{about.frontmatter.location}</p>
      </div>
    </div>
  </article>
</header>

<style>
  @media (max-width: 768px) {
    .flex-col.justify-end {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
    }
  }
</style>